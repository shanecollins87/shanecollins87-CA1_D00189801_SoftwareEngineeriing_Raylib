
#include "raylib.h" // the very first thing is to include the raylib libary
#include "../globals.h"

int main() //main code for project
{
    SetConfigFlags(FLAG-YSYNC-HINT | FLAG_WINDOW_HIGHDPI \ FLAG-WINDOW-RESIZABLE);
    setTargetFPS(60)
    
    // Init
    InitWindow(WINDOW_WIDTH, WINDOW_HEIGHT, WINDOW_TITLE); // Initialise Window
    InitAudioDevice(); // Init Audio Device

    // Load
    Texture2D player = LoadTexture("T3/resources/player.png"); // This calls the correct image as its pointing to the corrrect folder in the path to correct folder
    Sound sound = LoadSound("T3/resources/sound.wav"); //Similarly this does the same for the relevant Audio / Wav files


    // While

    while (!WindowShouldClose())  // Informs the program that if there is no intention to close the window it should stay open, i.e not hitting a close button or Esc key etc. whats in the loop will run
    {

        // Update
        if (IsKeyPressed(KEY_SPACE))
        {

            PlaySound(sound);

        }


        // Draw
        BeginDrawing(); // Tells the program to Draw Text / Shapes 

        /*
        // A Basic example would be as follows:

        DrawCircleV(Vector2) {30,40}, () {30, 40}, COLOR_GREEN;

        // raylib has pre built in color for example COLOR_RED is {229, 78, 48, 255}
        */
           
            ClearBackground(COLOR_WHITE); // Every frame resets with the colour WHITE
            DrawtextureV(player, (Vector2) {WINDOW_WIDTH/2, WINDOW_HEIGHT/2}, WHITE); //VOID DrawtextureV(Texture2D texture aka player , Vector2 position, Colour tint)
        
            DrawText("Chill!", 190, 200, 20, LIGHTGRAY);
        
        EndDrawing();
    }

    // Unload - this is good practice
    UnloadTexture(player); // to unload Texture 
    UnloadTSound(sound); // to unload Texture

    // Deinit   - This is for when we do intend to Close / shutdown Audio, the Window etc.
    CloseAudioDevice(); 
    CloseWindow();

    return 0;  // We return to Zero
}